# Azure Production Environment Configuration

# Database - Azure VM MongoDB
MONGODB_URI=mongodb://omyra-app:your-app-password@10.1.1.4:27017/omyra-project-nexus?authSource=omyra-project-nexus&replicaSet=rs0

# JWT Configuration
JWT_SECRET=your-super-secure-production-jwt-secret-256-bits-long
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=8000
NODE_ENV=production
WEBSITES_PORT=8000

# Azure App Service specific
WEBSITE_NODE_DEFAULT_VERSION=18.17.0

# CORS - Azure Static Web App URL
FRONTEND_URL=https://omyra-frontend.azurestaticapps.net

# Email Configuration (SendGrid recommended for Azure)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=apikey
EMAIL_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Azure Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# Security Settings
TRUST_PROXY=true
ENABLE_HTTPS=true
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Logging
LOG_LEVEL=info
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string

# Performance
COMPRESSION=true
BCRYPT_ROUNDS=12
